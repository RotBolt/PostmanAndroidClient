<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PostmanAndroidClient" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryVariant">@color/colorOrange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="baseThemeColor">@android:color/white</item>
        <item name="baseThemeComplimentColor">@android:color/black</item>
        <item name="android:textColor">?attr/baseThemeComplimentColor</item>
        <item name="shimmerColor">@color/greyShimmerLight</item>
        <item name="shadeGrey">@color/grey500</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="AppModalStyle" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_bg</item>
    </style>

    <style name="Theme.PostmanAndroidClient.InputField">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/greyShimmerLight</item>
        <item name="android:background">@color/edit_text_bg_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/margin_8</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.PostmanAndroidClient.InputField.Outlined">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/greyShimmerLight</item>
        <item name="android:background">@drawable/text_field_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/margin_8</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>